root = true

[*.cs]
dotnet_naming_rule.instance_fields_should_be_camel_case.severity = suggestion
dotnet_naming_rule.instance_fields_should_be_camel_case.symbols = instance_fields
dotnet_naming_rule.instance_fields_should_be_camel_case.style = instance_field_style

dotnet_naming_symbols.instance_fields.applicable_kinds = field
dotnet_naming_symbols.instance_fields.applicable_accessibilities = private, internal
dotnet_naming_symbols.instance_fields.required_modifiers = 

dotnet_naming_style.instance_field_style.capitalization = camel_case
dotnet_naming_style.instance_field_style.required_prefix = 
dotnet_naming_style.instance_field_style.required_suffix = 

# Allow omitting private modifier
dotnet_style_require_accessibility_modifiers = never:suggestion
dotnet_style_readonly_field = true:suggestion

dotnet_sort_system_directives_first = true
csharp_using_directive_placement = inside_namespace
csharp_using_directive_full_qualification = true

resharper_redundant_name_qualifier_highlighting = hint
resharper_check_namespace_highlighting=hint
resharper_unused_member_global_highlighting=hint
resharper_place_single_method_argument_lambda_on_same_line = none
resharper_convert_to_primary_constructor_highlighting = none
resharper_csharp_keep_existing_linebreaks = true
resharper_keep_existing_arrangement = true

dotnet_style_allow_statement_lambdas_on_one_line = false
# resharper: put lambda braces on new line
csharp_wrap_before_arrow_with_expressions = true

# set max line length to 240
max_line_length = 240

indent_style = space
indent_size = 4

[*.json]
# Settings for JSON files
indent_style = space
indent_size = 2

[*.scene]
# Settings for JSON files
indent_style = space
indent_size = 2