    <PropertyGroup>
        <TargetFrameworkBaseVersion>net10.0</TargetFrameworkBaseVersion>
        <LangVersion>14</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Utf8StringInterpolation" Version="1.3.2" />

        <ProjectReference Include="$(MSBuildThisFileDirectory)..\src\Pollus.Engine\Pollus.Engine.csproj" />
        <ProjectReference Include="$(MSBuildThisFileDirectory)..\src\Pollus.Generators\Pollus.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    </ItemGroup>
</Project>