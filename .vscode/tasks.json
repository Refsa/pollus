{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/examples/Desktop/Pollus.Examples.Desktop.csproj"
            ],
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/examples/Desktop/Pollus.Examples.Desktop.csproj"
            ],
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/examples/Desktop/Pollus.Examples.Desktop.csproj",
                "ui"
            ],
        }
    ]
}