types:
  Transform2D: "Pollus.Engine.Transform.Transform2D"
  Sprite: "Pollus.Engine.Rendering.Sprite"
entities:
  entity 1:
    components:
      Transform2D:
        Position: { x: 5, y: 10 }
        Scale: { x: 1, y: 1 }
        Rotation: 0
      Sprite:
        Material:
          Texture: "file://some/path/to/sprite.png"
          ShaderSource: "file://some/path/to/shader.wgsl"
          Sampler: "internal://nearest"
        Slice:
          Min: { X: 0, Y: 0 }
          Max: { X: 16, Y: 16 }
        Color: { R: 0, G: 0, B: 0, A: 1 }
    children:
      child 1:
        components:
          Transform2D:
            Position: { X: 0, Y: 0 }
            Scale: { X: 1, Y: 1 }
            Rotation: 0
  entity 2:
    components:
      Transform2D:
        Position: { X: 10, Y: 10 }
        Scale: { X: 1, Y: 1 }
        Rotation: 0
    children: []